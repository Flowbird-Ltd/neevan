<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_crm_lead_send_email_button" model="ir.ui.view">
        <field name="name">crm.lead.send.email.button.form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_set_lost']" position="after">
                <button name="action_email_preview" type="object" string="Email preview"/>
            </xpath>
        </field>
    </record>
</odoo>
