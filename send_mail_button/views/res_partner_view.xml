<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_partner_send_email_button" model="ir.ui.view">
        <field name="name">res.partner.send.email.button.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@role='alert']" position="before">
              <header>
                <button name="action_email_preview" type="object" string="Email preview"/>
              </header>
            </xpath>
        </field>
    </record>
</odoo>
